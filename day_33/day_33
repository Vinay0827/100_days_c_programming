//swaping using pointers

#include<stdio.h>

void swap(int *a, int *b)
{
    int temp=*a;
    *a=*b;
    *b=temp;
}

int main()
{
    int x,y;
    printf("enter two numbers: ");
    scanf("%d%d",&x,&y);

    printf("the numbers before swapping are x=%d and y=%d\n",x,y);

    swap(&x,&y);

    printf("the numbers after swapping are x=%d and y=%d\n",x,y);

    return 0;
}
